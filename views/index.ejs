<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<title></title>
	</head>
	<body>
        
<nav>
	<a href="/books/new">Add a New Book</a>
</nav>

		<h1>Books index page</h1>
		<ul>
			<% books.forEach(book => { %>
            <li><a href="/books/<%=book._id; %>"> <%=book.title; %> </a></li>
					<form action="/books/<%=book.id%>?_method=DELETE" method="POST">
						<input type="submit" value="DELETE">
					</form>
			<% }) %>
		</ul>
	</body>
</html>
